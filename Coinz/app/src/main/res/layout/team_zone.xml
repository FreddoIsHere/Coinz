<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gold"
            android:layout_marginLeft="10dp"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/gold_display"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="0"/>
    </LinearLayout>
    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textAlignment="center"
        android:text="Drag the amount of gold you want to place onto the zone you want to acquire for your team."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/grab"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@mipmap/grab"
            android:layout_marginRight="5dp" />
        <ImageView
            android:id="@+id/grab2"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@mipmap/grab"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:id="@+id/grab3"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@mipmap/grab"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:id="@+id/grab4"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@mipmap/grab"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:id="@+id/grab5"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@mipmap/grab"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="2000G"/>
        <TextView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="4000G"/>
        <TextView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="6000G"/>
        <TextView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="8000G"/>
        <TextView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="10000G"/>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="280dp"
        android:background="@drawable/teammap"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/a"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#909b99ea"/>

            <ImageView
                android:id="@+id/b"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#909b99ea"/>

            <ImageView
                android:id="@+id/c"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#909b99ea"/>

            <ImageView
                android:id="@+id/d"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#909b99ea"/>

            <ImageView
                android:id="@+id/e"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#909b99ea"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/a1"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#909b99ea"/>

            <ImageView
                android:id="@+id/b1"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#909b99ea"/>

            <ImageView
                android:id="@+id/c1"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#909b99ea"/>

            <ImageView
                android:id="@+id/d1"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#909b99ea"/>

            <ImageView
                android:id="@+id/e1"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#909b99ea"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/a2"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#909b99ea"/>

            <ImageView
                android:id="@+id/b2"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#909b99ea"/>

            <ImageView
                android:id="@+id/c2"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#909b99ea"/>

            <ImageView
                android:id="@+id/d2"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#90cc0000"/>

            <ImageView
                android:id="@+id/e2"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#908e0000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/a3"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#90ea9999"/>

            <ImageView
                android:id="@+id/b3"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#90ea9999"/>

            <ImageView
                android:id="@+id/c3"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#90ea9999"/>

            <ImageView
                android:id="@+id/d3"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#90ea9999"/>

            <ImageView
                android:id="@+id/e3"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#90ea9999"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/a4"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#90ea9999"/>

            <ImageView
                android:id="@+id/b4"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#90ea9999"/>

            <ImageView
                android:id="@+id/c4"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#90ea9999"/>

            <ImageView
                android:id="@+id/d4"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#90ea9999"/>

            <ImageView
                android:id="@+id/e4"
                android:layout_width="70dp"
                android:layout_height="56dp"
                android:background="#90ea9999"/>

        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/back_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Back to Depot"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>