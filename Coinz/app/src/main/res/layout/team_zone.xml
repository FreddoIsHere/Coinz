<?xml version="1.0" encoding="utf-8"?><!-- this is where you buy zones for your team  -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">
    <!-- displays current content in bank  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/gold"
            android:src="@mipmap/gold" />

        <TextView
            android:id="@+id/gold_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="2dp"
            android:text="@string/_0"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>
    <!-- text: Drag the gold on the field you want to place it on  -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/drag_amount"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">
        <!-- items that can be dragged are in here -->
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/grab"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="5dp"
                android:contentDescription="@string/grab"
                android:src="@mipmap/grab" />

            <ImageView
                android:id="@+id/grab2"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/grab"
                android:src="@mipmap/grab" />

            <ImageView
                android:id="@+id/grab3"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/grab"
                android:src="@mipmap/grab" />

            <ImageView
                android:id="@+id/grab4"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/grab"
                android:src="@mipmap/grab" />

            <ImageView
                android:id="@+id/grab5"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/grab"
                android:src="@mipmap/grab" />
        </LinearLayout>
        <!-- displays costs of the respective drags-->
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/_2000g"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/_4000g"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/_6000g"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/_8000g"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/_10000g"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
        <!-- displays the zones you can drag into/onto -->
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:background="@drawable/teammap"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/a"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#909b99ea"
                    android:contentDescription="@string/zone" />

                <ImageView
                    android:id="@+id/b"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#909b99ea"
                    android:contentDescription="@string/zone" />

                <ImageView
                    android:id="@+id/c"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#909b99ea"
                    android:contentDescription="@string/zone" />

                <ImageView
                    android:id="@+id/d"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#909b99ea"
                    android:contentDescription="@string/zone" />

                <ImageView
                    android:id="@+id/e"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#909b99ea"
                    android:contentDescription="@string/zone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/a1"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#909b99ea"
                    android:contentDescription="@string/zone" />

                <ImageView
                    android:id="@+id/b1"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#909b99ea"
                    android:contentDescription="@string/zone" />

                <ImageView
                    android:id="@+id/c1"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#909b99ea"
                    android:contentDescription="@string/zone" />

                <ImageView
                    android:id="@+id/d1"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#909b99ea"
                    android:contentDescription="@string/zone" />

                <ImageView
                    android:id="@+id/e1"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#909b99ea"
                    android:contentDescription="@string/zone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/a2"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#909b99ea"
                    android:contentDescription="@string/zone" />

                <ImageView
                    android:id="@+id/b2"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#909b99ea"
                    android:contentDescription="@string/zone" />

                <ImageView
                    android:id="@+id/c2"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#909b99ea"
                    android:contentDescription="@string/zone" />

                <ImageView
                    android:id="@+id/d2"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#90cc0000"
                    android:contentDescription="@string/zone" />

                <ImageView
                    android:id="@+id/e2"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#908e0000"
                    android:contentDescription="@string/zone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/a3"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#90ea9999"
                    android:contentDescription="@string/zone" />

                <ImageView
                    android:id="@+id/b3"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#90ea9999"
                    android:contentDescription="@string/zone" />

                <ImageView
                    android:id="@+id/c3"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#90ea9999"
                    android:contentDescription="@string/zone" />

                <ImageView
                    android:id="@+id/d3"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#90ea9999"
                    android:contentDescription="@string/zone" />

                <ImageView
                    android:id="@+id/e3"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#90ea9999"
                    android:contentDescription="@string/zone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/a4"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#90ea9999"
                    android:contentDescription="@string/zone" />

                <ImageView
                    android:id="@+id/b4"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#90ea9999"
                    android:contentDescription="@string/zone" />

                <ImageView
                    android:id="@+id/c4"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#90ea9999"
                    android:contentDescription="@string/zone" />

                <ImageView
                    android:id="@+id/d4"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#90ea9999"
                    android:contentDescription="@string/zone" />

                <ImageView
                    android:id="@+id/e4"
                    android:layout_width="70dp"
                    android:layout_height="56dp"
                    android:background="#90ea9999"
                    android:contentDescription="@string/zone" />

            </LinearLayout>
        </LinearLayout>
        <!-- go back to depot here -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/back_to_depot"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>